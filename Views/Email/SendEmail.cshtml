@model EmailDTO;
@{
    ViewData["Title"] = "SendEmail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>SendEmail</h1>
<div class="input group col-md-6">
    @if (ViewBag.msg != null)
    {
        <div class="alert alert-success">@ViewBag.msg</div>
    }
    <form asp-action="SendEmail" asp-controller="Email" method="post">
    <input type="text" asp-for="Para"  class="form-control" />
    <div class="input-group-btn">
        <button  class="btn btn-success mt-3" type="submit" >
            Enviar
        </button>
    </div>
    </form>
</div>

